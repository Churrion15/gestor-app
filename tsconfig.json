{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./",
    "paths": {
      "*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "__tests__",
    "**/*.test.js",
    "**/*.spec.js"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./App.js",
    "./db.js",
    "./screens/**/*.js",
    "./components/**/*.js"
  ],
  "extends": "expo/tsconfig.base"
}
